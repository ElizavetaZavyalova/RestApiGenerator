{
  "pseudonyms": {
    "joins": {
      "author:books": ["id","author_id"],
      "books:audio": ["id","book_id"],
      "author:authorsBook": ["id","author_id"],
      "voiceover:audio": ["id","voiceover_id"],
      "voiceover:voiceoverAudio": ["id","voiceover_id"],
      "account:author": ["id","user_id"],
      "account:voiceover": ["id","user_id"],
      "reader:books": ["reading"],
      "audio:reader": ["listening"]
    },
    "tables": {
      "pseudonyms": ["!author","!voiceover"],
      "users": ["account","!reader"],
      "books": ["authorsBook","audioBooks"],
      "audio": ["voiceoverAudio"]
    },
    "entity": {
      "books": ["BookName","Annotation","Year","pageCount","TextRef","author_id"],
      "audio": ["duration","audioRef","voiceover_id","book_id"],
      "audioBook": ["BookName","Annotation","author_id"]
    }
  },
  "http_prefix": "recommendation/",
  "http": {
       "BooksOfFavoriteAuthors": {
         "get": "books->limit|sort",
         "request": "users/{id}/authorsBook"
       },
       "AudioOfFavoriteVoiceover": {
         "get": "books->limit|sort",
         "request": "reader/{id}/voiceoverAudio"
       },
       "AudioOfFavoriteVoiceoverAudioBooks": {
         "get": "books->limit|sort",
         "request": "reader/{id}/voiceoverAudio/books"
    }
  }
}