{
  "pseudonyms": {
    "tables": {
      "pseudonyms": ["!author","!voiceover"],
      "books": ["book","audioBooks"]
    },
    "entity": {
     "book": ["TextRef-s","BookName-s","Annotation-s","pageCount-i","year-i"],
      "audio": ["duration","audio_ref-s"]
    },
    "joins": {
      "books:author": ["author_id","id"],
      "books:audio": ["id","book_id"],
      "audio:voiceover": ["voiceover_id","id"],
      "audioBooks:audio": ["id","book_id"]
    }
  },
  "filters": {
    "authorName:1-and": "like_pseudonym-s",
    "bookInfo:and": "ge_pageCount|le_pageCount|ge_year|le_year",
    "nameInfo:1-or": "like_bookName-s|like_info-s"
  },
  "http_prefix": "searchBooks/",
  "http": {
    "Books": {
      "get": "book|id->limit|sort",
      "request": "author/[authorName]/book/[bookInfo]&[nameInfo]",
       "tags": "book|search"
    },
    "AudioBooks": {
      "get": "book|id->limit|sort",
      "request": "author/[authorName]/audioBooks/[bookInfo]&[nameInfo]",
      "tags": "audio|search"
    },
    "VoiceoverBooks": {
      "get": "book|id->limit|sort",
      "request": "voiceover/[authorName]/books/[bookInfo]&[nameInfo]",
      "tags": "audio|search"
    },
    "BookById": {
      "get": "book|id",
      "request": "book/{id}",
      "tags": "book|search"
    },
    "Audio": {
      "get": "audio|id",
      "request": "book/{id}/audio",
      "tags": "audio|search"
    },
    "AudioById": {
      "get": "audio|id|book_id",
      "request": "audio/{id}",
      "tags": "audio|search"
    },
    "BooksByVoiceoverId": {
      "get": "books|id",
      "request": "voiceover/{id}/books",
      "tags": "audio|search"
    }
  }
}