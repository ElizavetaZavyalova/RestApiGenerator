{
  "pseudonyms": {
    "tables": {
      "comments": ["answer"]
    },
    "fields":{
      "parent_id": ["level"]
    },
    "entity": {
      "comment": ["info-s=","user_id-i"],
      "chat": ["chat_id-i"]
    },
    "joins": {
      "comments:user": ["user_id","id"],
      "comments:books": ["chat_id","id"],
      "comments:answer": ["id","parent_id"]
    }
  },
  "http_prefix": "comments/",
  "http": {
    "CommentToBook": {
      "post": "comment",
      "request": "books/{id}/<comments",
      "tags": "comments"
    },
    "CommentToBookLevel": {
      "get": "comment|chat|id->limit",
      "request": "books/{id}/comments/{level}",
      "tags": "comments"
    },
    "CommentById": {
      "patch": "info-s->id",
      "get": "comments|chat|id->limit",
      "delete": "",
      "request": "comments/{id}",
      "tags": "comments"
    },
    "Answer": {
      "post": "comment|chat->id",
      "get": "comment|chat|id->limit",
      "request": "comments/{id}/<answer",
      "tags": "comments"
    }
  }
}